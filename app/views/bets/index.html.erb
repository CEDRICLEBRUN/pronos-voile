<div class='bets-bcg'>

  <h1 class="font-bold text-4xl">Mes paris</h1>

  <div class='my-bets'>
    <% @all_categories.each do |category| %>
      <div class='my-3'>
        <%= link_to new_bet_path(category: category['name']) do %>
          <div class='flex justify-around items-center my-3'>
            <div class='flex items-center'>
              <p class='my-bets-category-name'><%= category['name'] %></p>
              <%= image_tag category['logo_path'], class: 'logo-category mx-2' %>
            </div>
          </div>
        <% end %>
        <%= render "shared/bets_card", category: category['name'], user: current_user %>
      </div>
    <% end %>
  </div>

</div>
