<div class='bets-bcg'>
  <h1 class="font-bold text-4xl">Mes paris</h1>

  <div class='flex justify-around'>
    <% @categories.each do |category| %>
      <%= link_to new_bet_path(category: category['name']) do %>
        <div class='flex justify-around items-center'>
          <h2><%= category['name'] %></h2>
          <%= image_tag category['logo_path'], class: 'logo-category mx-2' %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
