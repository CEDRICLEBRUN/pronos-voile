<div class="crew-bcg">
  <h1 class='text-center my-4'>Je crée ma ligue</h1>

  <div class="form-crew">
    <%= simple_form_for @crew do |f| %>
        <div class="form-input"><%= f.input :name, label: false, placeholder: "Le nom de ma ligue" %></div>
        <div class="form-input-logo"><%= f.input :logo, label: false, placeholder: "Le logo de ta ligue", as: :file %></div>
        <div class="form-button"><%= f.submit "Créer ma ligue !", class: "btn-bet" %></div>
    <% end %>
  </div>
</div>
