<div class="connexion-bcg">
  <h1>S'inscrire</h1>
  <div class="form-crew">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'}, data: {turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%
        label_classes = "block text-sm font-bold mb-2 #{alert ? "text-red-500" : "text-gray-700"}"
        input_classes = "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{alert ? "border-red-500" : nil}"
      %>

      <div class="mb-4">
        <%= f.label :first_name, "Prénom *", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, "Nom *", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :username, "Pseudo *", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "last_name", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :avatar, "Avatar", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "Email *", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Mot de passe *", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <% if @minimum_password_length %>
        <em class="block text-sm font-normal mb-2 text-gray-900">(<%= @minimum_password_length %> caractères minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: input_classes %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_classes %>
      </div>

      <div class="flex items-center justify-between content-end">
        <%= f.submit "S'inscrire", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
