<div class="race-bcg">
  <h1><%= @race.name %> <%= @race.year %> </h1>

  <h1>Classement</h1>
  <div class="crew-img-rc">
    <%= cl_image_tag @crew.logo.key, alt: "text", class: "" %>
  </div>

  <div class="user-cards">
    <% @users.each do |user| %>
      <div class="flex justify-between items-center mb-8">
        <div class="user-card">
          <div class="flex justify-around items-center">
            <div class="items-center text-center">
              <%= cl_image_tag user.avatar.key, class: "avatar" %>
              <p><%= user.username %></p>
              <p><%= user.total_scores.where(race: @race).first.points %> pts</p>
            </div>
          </div>
        </div>
        <div class="flex justify-between">
          <% @all_categories.each do |category| %>
            <div class='user-bet-card'>
              <div class='flex justify-around items-center my-3'>
                <div class='flex items-center'>
                  <span class="user-bet-card-category-txt"><%= category['name'] %></span>
                </div>
                <span><%= user.scores.where(race: @race).first.points_by_category[category['name']] %> pts</span>
              </div>
              <% Bet.mine_by_category(category["name"], user).each do |bet| %>
                <div>
                  <p><%= bet.position %> - <%= bet.boat.name %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
